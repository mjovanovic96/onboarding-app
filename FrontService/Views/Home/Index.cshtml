@{
    ViewData["Title"] = "Onboarding Application - Food Order";
}

<div ng-app="FoodOrderApp">  
    <div ng-controller="FoodMenuCartController" ng-init="refresh()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 text-center">
                    <h2>Onboarding Application - Food Order</h2>
                </div>
            </div>
       
            <hr/>

            <div class="row" ng-model="foodMenu">
                <div class="col-sm-12 col-lg-4 col-md-6" ng-repeat="item in foodMenu.items">
                    <div class="food-item-wrapper">
                        <div class="image">
                            <img src="{{ item.imageUrl }}" alt="">
                        </div>
                        <div class="details">
                            <div class="title">
                                {{ item.name }}
                            </div>
                            <div class="description">
                                {{ item.description }}
                            </div>
                            <div class="price">
                                {{ item.price | number: 2 }}
                            </div>
                        </div>
                        <div class="cart-icon">
                            <img src="https://static.thenounproject.com/png/70771-200.png" ng-click="addToCart(item)" alt="">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 text-center">
                    <h2>Cart</h2>
                </div>
            </div>
       
            <hr/>

            <div class="row" ng-model="cart">
                <div class="col-sm-12 text-center">
                    <div>
                        <img style="width: 80px" src="https://www.clipartmax.com/png/small/270-2708193_remove-shopping-cart-icon-market-basket.png" ng-click="removeCart()" ng-if="cart.items.length > 0"/>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-4 col-md-6" ng-repeat="item in cart.items">
                    <div class="food-item-wrapper">
                        <div class="image">
                            <img src="{{ item.imageUrl }}" alt="">
                        </div>
                        <div class="details">
                            <div class="title">
                                {{ item.name }}
                            </div>
                            <div class="description">
                                {{ item.description }}
                            </div>
                            <div class="price">
                                {{ item.price | number: 2 }}
                            </div>
                        </div>
                        <div class="cart-icon">
                            <img src="https://static.thenounproject.com/png/70770-200.png" ng-click="removeFromCart(item)" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>